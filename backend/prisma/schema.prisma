generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int          @id @default(autoincrement())
  name              String
  email             String       @unique
  password          String
  role              Role         @default(PLAYER)
  createdAt         DateTime     @default(now())
  verified          Boolean      @default(false)
  verifyToken       String?
  resetToken        String?
  resetTokenExpires DateTime?
  ownedTeams        Team[]       @relation("OwnedTeams")
  teamMembers       TeamMember[]
}

model Team {
  id          Int          @id @default(autoincrement())
  name        String
  description String?
  ownerId     Int
  createdAt   DateTime     @default(now())
  owner       User         @relation("OwnedTeams", fields: [ownerId], references: [id])
  members     TeamMember[]
}

model User {
  id                Int          @id @default(autoincrement())
  email             String       @unique
  password          String
  role              Role         @default(PLAYER)
  createdAt         DateTime     @default(now())
  verified          Boolean      @default(false)
  verifyToken       String?
  resetToken        String?
  resetTokenExpires DateTime?

  playerProfile     PlayerProfile?
  ownerProfile      OwnerProfile?
}

model PlayerProfile {
  id        Int     @id @default(autoincrement())
  userId    Int     @unique
  name      String
  phone     String
  position  String
  height    Float?
  weight    Float?
  address   String?

  user      User    @relation(fields: [userId], references: [id])
}

model OwnerProfile {
  id           Int    @id @default(autoincrement())
  userId       Int    @unique
  indoorName   String
  phone        String
  address      String
  description  String?

  user         User   @relation(fields: [userId], references: [id])
}
